{
    "performance_optimization": {
        "description": "Performance optimization configuration for large-scale cognitive processing",
        "version": "1.0.0",
        "enabled": true,
        
        "caching": {
            "enabled": true,
            "cache_size": 2000,
            "ttl_seconds": 3600,
            "cache_types": {
                "reasoning_results": {
                    "size": 1000,
                    "ttl": 1800
                },
                "memory_queries": {
                    "size": 1500,
                    "ttl": 3600
                },
                "pattern_matches": {
                    "size": 800,
                    "ttl": 2400
                },
                "atomspace_operations": {
                    "size": 2000,
                    "ttl": 7200
                }
            }
        },
        
        "batch_processing": {
            "enabled": true,
            "default_batch_size": 50,
            "max_wait_time": 1.0,
            "batch_types": {
                "reasoning": {
                    "batch_size": 25,
                    "max_wait_time": 0.5,
                    "parallel_processing": true
                },
                "memory_operations": {
                    "batch_size": 100,
                    "max_wait_time": 0.3,
                    "parallel_processing": true
                },
                "atom_creation": {
                    "batch_size": 200,
                    "max_wait_time": 0.2,
                    "parallel_processing": false
                },
                "pattern_matching": {
                    "batch_size": 75,
                    "max_wait_time": 0.8,
                    "parallel_processing": true
                }
            }
        },
        
        "parallel_processing": {
            "enabled": true,
            "thread_pool_size": 8,
            "process_pool_size": 4,
            "max_concurrent_operations": 16,
            "use_threads_for": [
                "reasoning",
                "memory_search",
                "pattern_matching",
                "cognitive_analysis"
            ],
            "use_processes_for": [
                "large_dataset_processing",
                "complex_inference",
                "bulk_operations"
            ]
        },
        
        "memory_management": {
            "memory_pool_size": 200,
            "auto_cleanup": true,
            "cleanup_interval": 300,
            "max_memory_usage_mb": 2048,
            "garbage_collection": {
                "enabled": true,
                "frequency": 60,
                "aggressive_mode": false
            },
            "object_pooling": {
                "atomspace_objects": 50,
                "reasoning_contexts": 100,
                "pattern_matchers": 25,
                "memory_queries": 150
            }
        },
        
        "storage_optimization": {
            "atomspace_rocks_enabled": true,
            "compression_enabled": true,
            "bulk_operations": true,
            "persistence_strategy": "batch_write",
            "backup_frequency": 3600,
            "storage_backends": {
                "primary": "atomspace_rocks",
                "fallback": "json_file",
                "backup": "compressed_pickle"
            }
        },
        
        "monitoring": {
            "performance_tracking": true,
            "metrics_collection": true,
            "profiling_enabled": false,
            "alert_thresholds": {
                "avg_response_time_ms": 500,
                "cache_hit_rate": 0.7,
                "memory_usage_mb": 1500,
                "error_rate": 0.05
            },
            "reporting": {
                "interval_seconds": 300,
                "detailed_reports": false,
                "export_format": "json"
            }
        },
        
        "auto_tuning": {
            "enabled": true,
            "adaptation_frequency": 1800,
            "parameters": {
                "cache_size": {
                    "min": 500,
                    "max": 5000,
                    "step": 100
                },
                "batch_size": {
                    "min": 10,
                    "max": 500,
                    "step": 10
                },
                "thread_pool_size": {
                    "min": 2,
                    "max": 32,
                    "step": 2
                }
            },
            "targets": {
                "latency_ms": 100,
                "memory_usage_mb": 1000,
                "cpu_usage_percent": 70,
                "cache_hit_rate": 0.8
            }
        },
        
        "cognitive_specific": {
            "reasoning_optimization": {
                "pln_chaining_depth": 5,
                "parallel_reasoning_chains": true,
                "reasoning_cache_enabled": true,
                "incremental_learning": true
            },
            "memory_optimization": {
                "smart_indexing": true,
                "concept_clustering": true,
                "attention_based_retrieval": true,
                "lazy_loading": true
            },
            "pattern_matching_optimization": {
                "compiled_patterns": true,
                "pattern_cache_enabled": true,
                "fuzzy_matching_threshold": 0.8,
                "parallel_matching": true
            }
        },
        
        "debugging": {
            "detailed_logging": false,
            "performance_profiling": false,
            "operation_tracing": false,
            "memory_leak_detection": true
        }
    }
}