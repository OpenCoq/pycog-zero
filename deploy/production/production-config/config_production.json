{
  "environment": "production",
  "cognitive_mode": true,
  "opencog_enabled": true,
  "neural_symbolic_bridge": true,
  "ecan_attention": true,
  "pln_reasoning": true,
  "performance_optimization": {
    "enabled": true,
    "max_memory_usage": "6GB",
    "cpu_limit": 4,
    "concurrent_agents": 8,
    "batch_processing": true,
    "cache_optimization": true
  },
  "logging": {
    "level": "INFO",
    "structured_logging": true,
    "log_rotation": true,
    "max_log_size": "100MB",
    "retention_days": 30,
    "metrics_enabled": true
  },
  "security": {
    "authentication_required": true,
    "ssl_enabled": true,
    "secure_headers": true,
    "input_validation": true,
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst_limit": 10
    }
  },
  "monitoring": {
    "health_checks": true,
    "metrics_endpoint": "/metrics",
    "cognitive_metrics": "/cognitive/metrics",
    "prometheus_enabled": true,
    "alert_thresholds": {
      "memory_usage": 0.8,
      "cpu_usage": 0.8,
      "response_time": 5000,
      "error_rate": 0.05
    }
  },
  "backup": {
    "enabled": true,
    "frequency": "hourly",
    "retention_days": 30,
    "remote_backup": false,
    "backup_cognitive_state": true,
    "backup_agent_memory": true
  },
  "scalability": {
    "auto_scaling": false,
    "max_instances": 1,
    "load_balancing": false,
    "session_affinity": true,
    "distributed_cognitive_processing": false
  }
}